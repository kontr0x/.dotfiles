configuration {
  modes: "drun,ssh";
  terminal: "foot";
  ssh-command: "{terminal} --title={host} {ssh-client} {host} [-p {port}]";
  window-thumbnail: true;
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "spotlight-theme.rasi"

